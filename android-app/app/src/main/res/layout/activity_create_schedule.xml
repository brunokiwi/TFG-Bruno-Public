<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Horario"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del horario:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/scheduleNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Encender luz nocturna"
            android:maxLength="60"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dispositivo:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/deviceTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/lightRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luz"
                android:buttonTint="#354C9E"
                android:checked="true" />

            <RadioButton
                android:id="@+id/alarmRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detector"
                android:buttonTint="#354C9E"
                android:layout_marginStart="24dp" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de horario:"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/scheduleTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/punctualRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntual"
                android:buttonTint="#354C9E"
                android:checked="true" />

            <RadioButton
                android:id="@+id/intervalRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intervalo"
                android:buttonTint="#354C9E"
                android:layout_marginStart="24dp" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/punctualLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AcciÃ³n:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/actionGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/onRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encender (ON)"
                    android:buttonTint="#354C9E"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/offRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apagar (OFF)"
                    android:buttonTint="#354C9E"
                    android:layout_marginStart="24dp" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/timeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HH:mm (ej: 20:30)"
                android:inputType="time"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/intervalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de inicio:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/startTimeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HH:mm (ej: 20:00)"
                android:inputType="time"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora de fin:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/endTimeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HH:mm (ej: 06:00)"
                android:inputType="time"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:backgroundTint="#DD298C"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:textColor="@color/white"
                android:backgroundTint="#324E9D"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>